extends ../layouts/default

block content
    .container
        h1 Manage Organizations
        table.table.table-striped
            thead
                tr
                    td Name
                    td URL
                    td Actions
            tbody
                for org in orgs
                    tr
                        td= org.name
                        td
                            a(href='http://www.github.com/#{org.name}', target='_blank') http://www.github.com/#{org.name}
                        td
                            if org.active
                                a(href='/leave/#{org.name}') Leave
                            else
                                a(href='/join/#{org.name}') Join
